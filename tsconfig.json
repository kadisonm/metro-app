{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES6",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
	    "strictNullChecks": true,
        "importHelpers": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "lib": [
            "DOM",
            "ES5",
            "ES6",
            "ES7"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}